// Test electric field interpolation
// 
// Written by:
//   Kevin J. Bowers, Ph.D.
//   Plasma Physics Group (X-1)
//   Applied Physics Division
//   Los Alamos National Lab
// March/April 2004 - conversion of c++ test code into an input deck

begin_globals {
};

begin_initialization {
  double L = 1e10;
  int npart = 21;

  grid->dt = 1;
  grid->cvac = 1;
  grid->eps0 = 1;
  define_periodic_grid( 0, 0, 0,   // Grid low corner
                        L, L, L,   // Grid high corner
                        1, 1, 1,   // Grid resolution
                        1, 1, 1 ); // Processor configuration

  define_material("vacuum",1.0,1.0,0.0);
  define_species("test_species",1.,npart);

  finalize_materials();
  finalize_species();

  field(1,1,1).ex  = 0;
  field(1,2,1).ex  = 1;
  field(1,1,2).ex  = 2;
  field(1,2,2).ex  = 3;

  field(1,1,1).ey  = 4;
  field(1,1,2).ey  = 5;
  field(2,1,1).ey  = 6;
  field(2,1,2).ey  = 7;

  field(1,1,1).ez  = 8;
  field(2,1,1).ez  = 9;
  field(1,2,1).ez  = 10;
  field(2,2,1).ez  = 11;

  // Hack into vpic internals 

  int failed = 0;
  load_interpolator(interpolator,field,grid); 
  species_t *sp = find_species_name("test_species",species_list);
  sp->np = npart; 

# define test_e(X,DX,DY,DZ,VAL)                         \
  for( int n=0; n<npart; n++ ) {                        \
    sp->p[n].i  = LOCAL_CELL_ID(1,1,1);                 \
    sp->p[n].dx = DX;                                   \
    sp->p[n].dy = DY;                                   \
    sp->p[n].dz = DZ;                                   \
    sp->p[n].ux = 0;                                    \
    sp->p[n].uy = 0;                                    \
    sp->p[n].uz = 0;                                    \
    sp->p[n].q  = mt_cauchy_drand(rng);                 \
  }                                                     \
  advance_p( sp->p, sp->np, sp->q_m, sp->pm, sp->max_nm,\
             accumulator, interpolator, grid );         \
  for( int n=0; n<npart; n++ ) {                        \
    if( sp->p[n].u##X != VAL ) {                        \
      failed++;                                         \
      sim_log(     "e"#X << " "                         \
                << DX << " "                            \
                << DY << " "                            \
                << DZ << " "                            \
                << VAL << " "                           \
                << n << " "                             \
                << sp->p[n].i << " "                    \
                << sp->p[n].dx << " "                   \
                << sp->p[n].dy << " "                   \
                << sp->p[n].dz << " "                   \
                << sp->p[n].ux << " "                   \
                << sp->p[n].uy << " "                   \
                << sp->p[n].uz << " "                   \
                << sp->p[n].q );                        \
    }                                                   \
  }

  test_e(x,0,-1,-1,0);
  test_e(x,0, 1,-1,1);
  test_e(x,0,-1, 1,2);
  test_e(x,0, 1, 1,3);

  test_e(y,-1,0,-1,4);
  test_e(y,-1,0, 1,5);
  test_e(y, 1,0,-1,6);
  test_e(y, 1,0, 1,7);

  test_e(z,-1,-1,0,8);
  test_e(z, 1,-1,0,9);
  test_e(z,-1, 1,0,10);
  test_e(z, 1, 1,0,11);
  
  if( failed ) sim_log( "FAIL" );
  else         sim_log( "pass" );

  abort(0);
}

begin_diagnostics {
}

begin_particle_injection {
}

begin_current_injection {
}

begin_field_injection {
}

