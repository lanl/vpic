#! /usr/bin/env bash

# OS X sucks!
find_exec="find" && [ `uname -o` == "Darwin" ] && find_exec="find -E"

echo "################################################################################"
echo "# VPIC library Makefile.am"
echo "# THIS FILE WAS GENERATED BY config/bootstrap DO NOT EDIT"
echo "################################################################################"
echo

################################################################################
# General settings
################################################################################

echo "#------------------------------------------------------------------------------#"
echo "# General Settings"
echo "#------------------------------------------------------------------------------#"
echo
echo "lib_LTLIBRARIES = libvpic.la"
echo
echo "AM_CPPFLAGS = -I\${top_srcdir}/src/include \\"
echo "   @EXTRA_CPPFLAGS@"
echo
echo "libvpic_includedir = \${includedir}"

echo
echo "#------------------------------------------------------------------------------#"
echo "# Headers"
echo "#------------------------------------------------------------------------------#"
echo
echo "libvpic_include_HEADERS = \\"

numfiles=`$find_exec src -type f -regex '.*\.h*x*' | wc -l`
cnt=1
for file in `$find_exec src -type f -regex '.*\.h*x*'` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "#------------------------------------------------------------------------------#"
echo "# Sources"
echo "#------------------------------------------------------------------------------#"
echo
echo "libvpic_la_SOURCES = \\"

numfiles=`$find_exec src -type f -regex '.*\.c*x*' | wc -l`
cnt=1
for file in `$find_exec src -type f -regex '.*\.c*x*' | sort` ; do
	if [ $cnt == $numfiles ] ; then
		echo "	\${top_srcdir}/$file"
	else
		echo "	\${top_srcdir}/$file \\"
	fi
	let cnt=$cnt+1
done

echo
echo "libvpic_la_LDFLAGS = -version-info @VERSION_INFORMATION@ \\"
echo "	@EXTRA_LDFLAGS@"
echo "libvpic_la_LIBADD = @EXTRA_LIBS@"
